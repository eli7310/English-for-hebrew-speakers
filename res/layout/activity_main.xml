<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.english.MainActivity" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:text="Learn English"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/start_btn"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/orange_btn"
        android:text="Start"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:maxHeight="2dp"
        android:maxWidth="2dp"
        android:src="@drawable/coins_icon2" />

    <TextView
        android:id="@+id/record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Your record:"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/last_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/record"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/levelBtn"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/orange_btn"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/levelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/levelBtn"
        android:layout_alignBottom="@+id/levelBtn"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textSize="12sp" />

    <Button
        android:id="@+id/specialModulsBtn"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_above="@+id/levelBtn"
        android:layout_alignLeft="@+id/start_btn"
        android:layout_marginBottom="35dp"
        android:background="@drawable/orange_btn"
        android:text="Special moduls"
        android:textSize="13sp" />

    <Button
        android:id="@+id/swtichBtn"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/blue_btn"
        android:text="Switch"
        android:textSize="10sp" />
    
    <Button
        android:id="@+id/videoBtn"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/blue_btn"
        android:text="Video"
        android:textSize="10sp" />

    <Button
        android:id="@+id/myDbBtn"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_above="@+id/specialModulsBtn"
        android:layout_alignLeft="@+id/specialModulsBtn"
        android:layout_marginBottom="8dp"
        android:background="@drawable/orange_btn"
        android:text="My database"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/coins_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_toLeftOf="@+id/imageView1"
        android:text=""
        android:textSize="20dp"
        android:textColor="#ffffff" />

</RelativeLayout>